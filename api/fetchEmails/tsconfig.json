{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": ".",
    "rootDir": ".",
    "sourceMap": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}

