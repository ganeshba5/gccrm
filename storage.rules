rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload, read, and delete files in notes/attachments/
    match /notes/attachments/{fileName} {
      // Allow read if user is authenticated
      allow read: if request.auth != null;
      
      // Allow write (upload/delete) if user is authenticated
      allow write: if request.auth != null
        && request.resource.size < 10 * 1024 * 1024; // Max 10MB file size
      
      // Allow delete if user is authenticated
      allow delete: if request.auth != null;
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

